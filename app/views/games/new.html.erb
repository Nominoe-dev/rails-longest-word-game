<h1><%= @letters %></h1>

<form action="/score" method="post" data-turbo="false">

 <p>What is the longest word you can find ?</p>

<input type="text" name="word" placeholder="Type your word">
<input type="submit" value="Play!">
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
<%= hidden_field_tag :letters, @letters.join %>
</form>

<%= link_to "Play again", root_path %>
